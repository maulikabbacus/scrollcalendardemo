<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="calendar.scroll.demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="calendar.scroll.demo.NavigationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="calendar.scroll.demo.DateActivity"
            android:parentActivityName="calendar.scroll.demo.NavigationActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="calendar.scroll.demo.RangeActivity"
            android:parentActivityName="calendar.scroll.demo.NavigationActivity"
            tools:targetApi="jelly_bean" />
    </application>

</manifest>